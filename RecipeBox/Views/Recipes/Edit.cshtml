@model RecipeBox.Models.Recipe

<h2>Edit</h2>

<h4>Edit this recipe: @Html.DisplayFor(m => m.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(m => m.RecipeId)

  @Html.LabelFor(m => m.Name)
  @Html.EditorFor(m => m.Name)

  @Html.LabelFor(m => m.Ingredients)
  @Html.TextAreaFor(m => m.Ingredients)

  @Html.LabelFor(m => m.Instructions)
  @Html.TextAreaFor(m => m.Instructions)

  <br>
  @Html.Label("Choose a rating:")
  @Html.DropDownList("Rating")

  <input type="submit" value="Save">
}

<p>@Html.ActionLink("Back to list", "Index")</p>

